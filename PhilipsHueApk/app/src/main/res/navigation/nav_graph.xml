<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.philipshueapk.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_hueFragment"
            app:destination="@id/hueFragment" />
    </fragment>
    <fragment
        android:id="@+id/hueFragment"
        android:name="com.example.philipshueapk.HueFragment"
        android:label="fragment_hue"
        tools:layout="@layout/fragment_hue" >
        <action
            android:id="@+id/action_hueFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>